@model IEnumerable<ServiceProduct>
@using System.Globalization

    <div class="row pb-3">

        @foreach (var serviceProduct in Model)
        {
        <div class="col-lg-3 col-sm-6">
            <div class="row p-2">
                     <div class="col-12 p-1">
                        <div class="card border-0 p-3 shadow border-top border-5 rounded">
                           <img src="@serviceProduct.ImageUrls" class="card-img-top rounded"/>
                            <div class="card-body pb-0">
                                <div class="pl-1">
                                    <p class="card-title h5 text-dark opacity-75 text-uppercase text-center">@serviceProduct.Name</p>
                                <p class="card-title h5 text-dark opacity-75 text-uppercase text-center">Category: @serviceProduct.CategoryName</p>
                                <p class="card-title h5 text-dark opacity-75 text-uppercase text-center">Location: @serviceProduct.Location</p>


                                </div>
                                 <div class="pl-1">
                                <p class="h5 text-dark opacity-75 text-uppercase text-center">Price :<span> @serviceProduct.Price.ToString("c", new CultureInfo("en-ZA"))</span> </p>
                                 </div>

                            </div>
                        </div>
                        <div>
                            <a asp-action="Details" asp-route-serviceProductId="@serviceProduct.CategoryId" class="btn btn-primary bg-gradient border-0 form-control">
                                Details
                            </a>
                            </div>
                    </div>

                </div>

            </div>
        }

    </div>