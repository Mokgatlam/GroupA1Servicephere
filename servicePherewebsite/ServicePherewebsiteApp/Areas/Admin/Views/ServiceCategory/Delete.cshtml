@model ServiceCategory

<div class="card shadow border-0 mt-4  ">
    <div class="card-header bg-secondary bg-gradient mt-0 py-3">
        <div class="row">

            <div class="col-12 text-center">

                <h2 class="text-white py-2">Delete Category</h2>
                </div>
            </div>
    
    </div>

    <div class="card-body p-4">
        <form method="post">
            @*<input asp-for="CategoryId" hidden/>*@
            <div class="border p-3 mt-4">
               

                <div asp-validation-summary="ModelOnly" class="text-danger">
                </div>

                <div class="mb-3 row p-1">
                    <label asp-for="Name" class="form-label p-0"></label>
                    <input type="text" class="form-control" disabled asp-for="Name" placeholder="Enter the Category Name" />


                </div>

                <div class="mb-3 row p-1">
                    <label asp-for="Description" class="form-label p-0"></label>
                    <input type="text" class="form-control" disabled asp-for="Description" placeholder="Enter the Category Description" />


                </div>

                <div class="mb-3 row p-1">
                    <label asp-for="CreatedAt" class="form-label p-0"></label>
                    <input type="datetime-local" class="form-control" disabled asp-for="CreatedAt" value="@Model.CreatedAt.ToString("yyyy-MM-ddTHH:mm:ss")" readonly />



                </div>
                <div class="row">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger form-control">Delete</button>

                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="ServiceCategory" asp-action="Index" class="btn btn-secondary border form-control">
                            Back to List
                        </a>
                    </div>


                </div>



            </div>

        </form>
        </div>
    </<div>




