@model ServiceProduct

<div class="card shadow border-0 my-4  ">
    <div class="card-header bg-secondary bg-gradient mt-0 py-3">
        <div class="row">

           

            <div class="col-12 text-center">
                <h2 class="text-white py-2"> Edit Product</h2>

                </div>

                </div>

                </div>
    <div class="card-body p-4">

        <form method="post">
            @*<input asp-for="ProductId" hidden/>*@
            <div class="border p-3 mt-4">
                <div class="row pb-2">

                    <hr />

                </div>

                <div asp-validation-summary="ModelOnly" class="text-danger">
                </div>

                <div class="mb-3 row p-1">
                    <label asp-for="Name" class="form-label p-0"></label>
                    <input type="text" class="form-control" asp-for="Name" placeholder="Enter the Service  Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>

                </div>

                <div class="mb-3 row p-1">
                    <label asp-for="Description" class="form-label p-0"></label>
                    <input type="text" class="form-control" asp-for="Description" placeholder="Enter the Service Description" />
                    <span asp-validation-for="Description" class="text-danger"></span>

                </div>

                <div class="mb-3 row p-1">
                <label asp-for="Description" class="form-label p-0"></label>
                <textarea type="text" class="form-control" asp-for="Description" placeholder="Enter the Service Description"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>

            </div>

            <div class="mb-3 row p-1">
                <label asp-for="Price" class="form-label p-0"></label>
                <input type="number" class="form-control" asp-for="Price" placeholder="Enter the Price for Service" />
                <span asp-validation-for="Price" class="text-danger"></span>

            </div>

            <div class="mb-3 row p-1">
                <label asp-for="Location" class="form-label p-0"></label>
                <input type="text" class="form-control" asp-for="Location" placeholder="Enter the your Location" />
                <span asp-validation-for="Location" class="text-danger"></span>

            </div>

            <div class="mb-3 row p-1">
                <label asp-for="ImageUrls" class="form-label p-0"></label>
                <input type="file" class="form-control" asp-for="ImageUrls" placeholder="upload your images" />
                <span asp-validation-for="ImageUrls" class="text-danger"></span>

            </div>
            <div class="mb-3 row p-1">
                <label asp-for="IsActive" class="form-label p-0"></label>
                <input type="text" class="form-control" asp-for="IsActive" placeholder="Enter the Service Description" />
                <span asp-validation-for="IsActive" class="text-danger"></span>

            </div>



            <div class="mb-3 row p-1">
                <label asp-for="CreatedAt" class="form-label p-0"></label>
                <input type="datetime-local" class="form-control" asp-for="CreatedAt" value="@Model.CreatedAt.ToString("yyyy-MM-ddTHH:mm:ss")" readonly />
                <span asp-validation-for="CreatedAt" class="text-danger"></span>

                <div class="mb-3 row p-1">
                    <label asp-for="UpdatedAt" class="form-label p-0"></label>
                    <input type="datetime-local" class="form-control" asp-for="UpdatedAt" value="@Model.CreatedAt.ToString("yyyy-MM-ddTHH:mm:ss")" readonly />
                    <span asp-validation-for="UpdatedAt" class="text-danger"></span>

                </div>

               
                <div class="row">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Update</button>

                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="ServiceProduct" asp-action="Index" class="btn btn-secondary border form-control">
                            Back to List
                        </a>
                    </div>


                </div>


                </div>
            </div>

        </form>
        </div>
        </div>




@section Scripts {

    @{
        <partial name="_ValidationScriptsPartial" />

    }
}
