@model List<ServiceProduct>

<section class="ServiceProductList">

<div class="card shadow border-0 my-4  ">
    <div class="card-header bg-secondary bg-gradient mt-0 py-3">
        <div class="row">



            <div class="col-12 text-center">
                <h2 class="text-white py-2"> Service Product List</h2>
            </div>
               

        </div>

    </div>
    <div class="card-body p-4">
        <div class="row pt-4 pb-3">
            <div class="col-6">
                
            </div>
            <div class="col-6 text-end">
                <a asp-controller="ServiceProduct" asp-action="Upsert" class="btn btn-primary">
                    Create new Service List <i class="bi bi-plus-circle"></i>
                </a>

            </div>
        </div>


            <table id="tblData" class="table table-bordered table-striped" width="100%">

            <thead>
                <tr>

                    <th>
                        Service Name
                    </th>

                    <th>
                        Description
                    </th>

                    <th>
                        Category
                    </th>
                        <th>
                            Location
                        </th>

                    <th>Actions</th>

                </tr>

            </thead>
            <tbody>
            
                <!--display data from database-->
                @foreach (var obj in Model)
                {
                    <tr>
                        <td>@obj.Name</td>
                        <td>@obj.Description</td>
                            <td>@obj.Category.Name</td>
                        <td>@obj.Location</td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="ServiceProduct" asp-action="Upsert" asp-route-id="@obj.SProductId" class="btn btn-primary mx-2"> <i class="bi bi-pencil"></i> Edit</a>
                                <a asp-controller="ServiceProduct" asp-action="Delete" asp-route-id="@obj.SProductId" class="btn btn-danger mx-2"><i class="bi bi-trash"></i> Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
 
               
        </table>

    </div>
</div>




  

</section>

