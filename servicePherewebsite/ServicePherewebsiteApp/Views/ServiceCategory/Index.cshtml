@model List<ServiceCategory>

<section class="ServiceCategoryList">

<div class="card shadow border-0 mt-4  ">
    <div class="card-header bg-secondary bg-gradient mt-0 py-3">
        <div class="row">



            <div class="col-12 text-center">
                <h2 class="text-white py-2"> Service Category List</h2>
            </div>
               

        </div>

    </div>
    <div class="card-body p-4">
        <div class="row pt-4 pb-3">
            <div class="col-6">
                
            </div>
            <div class="col-6 text-end">
                <a asp-controller="ServiceCategory" asp-action="Create" class="btn btn-primary">
                    Create new Category <i class="bi bi-plus-circle"></i>
                </a>

            </div>
        </div>


        <table class="table table-bordered table-striped">

            <thead>
                <tr>

                    <th>
                        Category Name
                    </th>

                    <th>
                        Description
                    </th>

                    <th>
                        Date Created
                    </th>
                    <th></th>

                </tr>

            </thead>
            <tbody>
                <!--display data from database-->
                @foreach (var obj in Model.OrderBy(u => u.CreatedAt))
                {
                    <tr>
                        <td>@obj.Name</td>
                        <td>@obj.Description</td>
                        <td>@obj.CreatedAt</td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="ServiceCategory" asp-action="Edit" asp-route-id="@obj.CategoryId" class="btn btn-primary mx-2"> <i class="bi bi-pencil"></i> Edit</a>
                                <a asp-controller="ServiceCategory" asp-action="Delete" asp-route-id="@obj.CategoryId" class="btn btn-danger mx-2"><i class="bi bi-trash"></i> Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>

        </table>

    </div>
</div>











  

</section>
